{
  "name": "poker-crm-backend",
  "version": "0.1.0",
  "private": true,
  "description": "Poker CRM backend (NestJS + Supabase Postgres)",
  "scripts": {
    "build": "NODE_OPTIONS=--max-old-space-size=2048 nest build",
    "start": "NODE_OPTIONS=--max-old-space-size=2048 nest start",
    "start:dev": "nest start --watch",
    "start:prod": "NODE_OPTIONS=--max-old-space-size=2048 node dist/main.js",
    "postinstall": "npm rebuild bcrypt --build-from-source || true",
    "lint": "eslint '{src,test}/**/*.{ts,tsx}' --max-warnings=0",
    "format": "prettier --write .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "storage:create-bucket": "ts-node -r tsconfig-paths/register scripts/create-bucket.ts",
    "storage:create-kyc-bucket": "ts-node -r tsconfig-paths/register scripts/create-kyc-documents-bucket.ts",
    "migrate": "node scripts/run-migrations.js"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.7",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.7",
    "@nestjs/platform-express": "^10.4.7",
    "@nestjs/platform-socket.io": "^10.4.20",
    "@nestjs/typeorm": "^11.0.0",
    "@nestjs/websockets": "^10.4.20",
    "@supabase/supabase-js": "^2.78.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "exceljs": "^4.4.0",
    "pdfkit": "^0.17.2",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.5",
    "@nestjs/schematics": "^10.1.3",
    "@nestjs/testing": "^10.4.7",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.12",
    "@types/pdfkit": "^0.17.4",
    "dotenv": "^17.2.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.2"
  }
}
